<div id="signupform" style="width: 300px;">
	<h2 align="left" id="headline-form" style="color: white;">Sign Up For Free</h2>
	
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <fieldset>
		  <%= devise_error_messages! %>

		  <div><%= f.email_field :email, :autofocus => true, placeholder: 'Please enter your email address'%></div>

		  <div><%= f.password_field :password, placeholder: 'Password' %></div>

		  <div><%= f.password_field :password_confirmation, placeholder: 'Password confirmation' %></div>

		  <div>
		  		<select id="signup_user" name="user[role]" class="span3">
					<option value="owner">Blog Owner</option>
					<option value="poster">Guest Poster</option>
					<option value="both">Both: Guest Poster & Blog Owner</option>
				</select>
			</div>


		  <div><%= f.submit "Sign up" %></div>
	  </fieldset>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
